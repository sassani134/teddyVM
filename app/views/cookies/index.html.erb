<%= turbo_frame_tag :cookie_consent do %>

    <div 
    class="relative z-40" 
    aria-labelledby="modal-title" 
    role="dialog" 
    aria-modal="true"
    data-age-target="container"
    >
      <!--
        Background backdrop, show/hide based on modal state.

        Entering: "ease-out duration-300"
          From: "opacity-0"
          To: "opacity-100"
        Leaving: "ease-in duration-200"
          From: "opacity-100"
          To: "opacity-0"
      -->
      <div
        data-age-target="backdrop"
        class="fixed inset-0 bg-black bg-opacity-75  transition-opacity"
        data-transition-enter="ease-out duration-300"
        data-transition-enter-start="opacity-0"
        data-transition-enter-end="opacity-100"
        data-transition-leave="ease-in duration-100"
        data-transition-leave-start="opacity-100"
        data-transition-leave-end="opacity-0"
      ></div>

      <div class="fixed inset-0 z-10 overflow-y-auto">
        <div class="flex min-h-full  justify-center text-center items-center px-10">
          <!--
            Modal panel, show/hide based on modal state.

            Entering: "ease-out duration-300"
              From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
              To: "opacity-100 translate-y-0 sm:scale-100"
            Leaving: "ease-in duration-200"
              From: "opacity-100 translate-y-0 sm:scale-100"
              To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
          -->
          <div
            data-age-target="panel"
            class="relative transform overflow-hidden rounded-lg bg-black  text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg"
            data-transition-enter="ease-out duration-300"
            data-transition-enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            data-transition-enter-end="opacity-100 translate-y-0 sm:scale-100"
            data-transition-leave="ease-in duration-200"
            data-transition-leave-start="opacity-100 translate-y-0 sm:scale-100"
            data-transition-leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
          >

            <div class="bg-black px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
              <div class="sm:flex sm:items-start">
                <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-transparent sm:mx-0 sm:h-10 sm:w-10">
                  <!-- Heroicon name: outline/exclamation-triangle -->

                  <%=image_tag("logoBlanc.png")%>
                  <%# <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 10.5v3.75m-9.303 3.376C1.83 19.126 2.914 21 4.645 21h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 4.88c-.866-1.501-3.032-1.501-3.898 0L2.697 17.626zM12 17.25h.007v.008H12v-.008z" />
                  </svg> %>
                </div>
                <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                  <h3 class="text-lg font-medium leading-6 text-gold-300" id="modal-title">Cookies</h3>
                  <div class="mt-2">
                    <p class="text-sm text-gold-500">
                    Ce site utilise des cookies afin de vous procurer la meilleure exp√©rience possible.
                    En poursuivant votre navigation, vous acceptez leur utilisation.                    
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="bg-black px-4 py-3 sm:px-6">
                <%= link_to "En savoir plus", cookies_policy_path, class: "inline-flex w-full m-2 justify-center text-green-400" %>
                <%= button_to "Accepter", cookie_consent_path(consent: true), method: :post, class: "inline-flex w-full m-2 justify-center rounded-md border border-transparent bg-green-500 px-4 py-2 text-base text-white shadow-sm hover:bg-green-700"%>
                <%= button_to "Refuser", cookie_consent_path(consent: false), method: :post, class: "inline-flex w-full  m-2 justify-center rounded-md border border-transparent bg-red-500 px-4 py-2 text-base text-white shadow-sm hover:bg-red-700"%>
            </div>
          </div>
        </div>
      </div>
    </div>
    

<% end %>
