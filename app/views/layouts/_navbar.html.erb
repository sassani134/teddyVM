            <%= image_tag("https://teddyfear.fra1.cdn.digitaloceanspaces.com/logoBlanc.png", class: "block h-12 w-auto lg:hidden", alt:"Teddy Fear")%>
            <%= image_tag("https://teddyfear.fra1.cdn.digitaloceanspaces.com/logoBlanc.png", class: "hidden h-12 w-auto lg:block", alt:"Teddy Fear")%>
          <% end %>
        </div>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4 ">
            <%= link_to("Boutique",comming_index_path, class: "bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium")%>
            <%= link_to("Teddy Fear",root_path(anchor: "second"), data: {controller: "scroll-to"}, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium")%>
            <%= link_to("C'est quoi ?",root_path(anchor:"third"), data: {controller: "scroll-to"}, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium")%>
